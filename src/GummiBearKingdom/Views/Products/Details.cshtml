@model GummiBearKingdom.Models.Product
@{
    ViewData["Title"] = "Product: Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Image = "";
    if (Model.Picture != null)
    {
        var base64 = Convert.ToBase64String(Model.Picture);
        Image = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<h2>@Model.Name Details:</h2>
<div class="row">
   
    <div class="col s12 m12">
        <div class="card horizontal">
            <div class="card-image">
                <img src="@Image">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <h5 class="header">Product Name: <em>@Model.Name</em></h5><br />
                    <h5>Price: <em>$@Model.Cost</em></h5><br />
                    <h5>Country of Origin: <em>@Model.Country</em></h5><br />
                </div>
                <div class="card-action">
                    <a href="/Products/Edit/@Model.ProductId">Edit Product</a>
                    <a href="/Products/Delete/@Model.ProductId">Delete Product</a>
                </div>
            </div>
        </div>
    </div>
    
</div>