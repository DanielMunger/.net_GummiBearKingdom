@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Hello From Products Create</h1>
<div class="row">
    <div class="col md3"></div>
    <div class="col md9">
        <h3>Add a new Product to the Line</h3>
       <form method="post" asp-action="Create" asp-controller="Products" enctype="multipart/form-data">
           <label for="name">Product Name</label>
           <input type="text" id="name" name="name" />
           <hr />
           <label for="cost">Product Cost</label>
           <input type="number" id="cost" name="cost" />
           <hr />
           <label for="country">Product Origin</label>
           <input type="text" id="country" name="country" />
           <hr />
           <label for="picture">Product Image</label>
           <input type="file" id="picture" name="picture" />
           <hr />
           <input class="btn" type="submit" value="Add Product"/>
       </form>
    </div>
</div>